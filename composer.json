{
  "name": "mossengine/helpersstatement",
  "type": "library",
  "description": "A PHP sub library for the Mossengine/Helper library that provides Statement helper functions",
  "keywords": [
    "helpers",
    "statement",
    "statements",
    "functions"
  ],
  "homepage": "https://github.com/Mossengine/HelpersStatement",
  "support": {
    "issues": "https://github.com/Mossengine/HelpersStatement/issues",
    "source": "https://github.com/Mossengine/HelpersStatement"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Brendon Moss",
      "email": "brenmoss@mossengine.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ramsey/uuid": "^3.4.1",
    "illuminate/support": "^5.2.32",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2",
    "phpunit/phpunit": "~4.0 || ~5.0"
  },
  "autoload": {
    "psr-4": {
      "Mossengine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit",
    "phpcs": "php-cs-fixer fix -v --diff --dry-run"
  }
}
